<div class ="contents row">

    <% if user_signed_in? && current_user.id == @blogs.user_id %>
      <div class="more">
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/blogs/#{@blogs.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/blogs/#{@blogs.id}", method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <%= simple_format(@blogs.text) %>
    <span class="name">
      <a href="/users/<%= @blogs.user.id %>">
        <span>投稿者</span><%= @blogs.user.nickname %>
      </a>
    </span>
</div>